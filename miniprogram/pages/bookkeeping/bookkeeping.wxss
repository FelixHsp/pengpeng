page{
  background-color: #eee
}
.wrapper{
  width: 100%;
  height: 150px;
  background: #ff6b6a;
  position: relative
}
.wrapper .user-name{
  color: white;
  font-size: 14px;
  position: relative;
  top: 5px;
  left: 5px;
  width: 200px;
}
.wrapper .mon{
  color: white;
  font-size: 14px;
  position: relative;
  top: 30px;
  width: 200px;
  left: 40px;
  /* transform: translate(-30%,0); */
  margin-bottom: 20px;
}
.wrapper image{
  width: 40px;
  height: 40px;
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translate(-50%,-100%)
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 300px;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}
.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #ff6b6a;
  text-align: center;
}
.modal-content {
  padding: 50rpx 32rpx;
}
.modal-input {
  display: flex;
  background: #fff;
  border-bottom: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}
.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}
input-holder {
  color: #666;
  font-size: 28rpx;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
.type{
  color: #ff6b6a;
  font-size: 12px;
  position: relative;
  /* margin: 0 auto; */
  text-align: center;
}
#list{
  width: 95%;
  margin: 0 auto;
  background: #ff6b6a;
  border-radius: 10px;
  color: white;
}
#list .list-item{
  margin: 0 auto;
  width: 90%;
  height: 80px;
  margin-top: 10px;
  /* border-top: 1px solid #ccc; */
  position: relative;
  font-size: 14px;
}
#list .list-item .time{
  color: white;
  font-size: 12px;
  margin-top: 5px;
  /* position: absolute */
}
#list .list-item .img-pay{
  width: 40px;
  height: 40px;
  /* background-color: #99CC99; */
  margin-top: 20px;
  position: absolute;
  top:50%;
  margin-top:-20px;
}
#list .list-item .title{
  position: absolute;
  top:50%;
  left: 80px;
  transform: translateY(-50%);
}
#list .list-item .left{
  position: absolute;
  right:0;
  top:50%;
  transform: translateY(-50%);
}